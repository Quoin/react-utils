{
  "root": true,
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "airbnb"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "max-len": ["warn", 120],
    "react/react-in-jsx-scope": "off"
  },
  "overrides": [{
    "files": ["*.test.js?(x)"],
    "env": {
      "mocha": true
    },
    "globals": {
      "expect": "readonly"
    },
    "rules": {
      "react/jsx-props-no-spreading": "off",
      "react/prop-types": "off",
      "react/react-in-jsx-scope": "off"
    }
  }]
}
