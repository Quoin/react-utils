{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "dom",
      "ESNext",
      "ESNext.Symbol"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "outDir": "./dist/",
    "paths": {
      "chai-immutable": [ "./src/@types/chai-immutable" ],
      "redux-concatenate-reducers": [ "./src/@types/redux-concatenate-reducers" ]
    },
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
  },
  "include": [
    "./src"
  ]
}
